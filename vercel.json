{
    "rewrites": [
        {
            "source": "/api/businesses/:id",
            "destination": "/api/businesses"
        },
        {
            "source": "/api/businesses/:business_id/backers",
            "destination": "/api/businesses/backers"
        }
    ],
    "headers": [
        {
          "source": "/(.*)",
          "headers": [
            {
              "key": "access-control-allow-origin",
              "value": "*"
            },
            {
                "key": "access-control-allow-headers",
                "value": "Origin, X-Requested-With, Content-Type, Accept"
            }
            ]
        }
    ],
    "github": {
        "enabled": false
    }
}
